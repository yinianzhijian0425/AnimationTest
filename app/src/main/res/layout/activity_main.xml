<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <Button
        android:id="@+id/viewAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视图动画" />

    <Button
        android:id="@+id/propertyAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="补间动画" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画之电话小demo" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联合动画demo" />

    <Button
        android:id="@+id/bt_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="layoutAnimation的demo" />

    <Button
        android:id="@+id/bt_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="grideAnimation的demo" />

    <Button
        android:id="@+id/bt_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="animateLayoutChanges的demo" />

    <Button
        android:id="@+id/bt_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="layoutTransaction的demo" />

    <Button
        android:id="@+id/bt_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实现listView Item进入动画" />

</LinearLayout>
